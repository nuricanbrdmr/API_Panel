@{
    string _content = Url.Content("~/Content");
}
<!DOCTYPE html>
<html ng-app="app" ng-controller="rootController" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'
          rel='stylesheet'>
    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">
    <!-- AngularJS -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>

    @Styles.Render("~/Content/css/style.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css">
</head>
<body  ng-class="theme">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <span class="image">
                    <img class="favicon" src="@_content/img/logoG.jpg" />
                </span>
            </a>
            <div class="collapse navbar-collapse"
                 id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page"
                           href="#">File</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Edit</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#"
                           id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            View
                        </a>
                        <ul class="dropdown-menu"
                            aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    Another
                                    action
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    Something
                                    else here
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#"
                           id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Project
                        </a>
                        <ul class="dropdown-menu"
                            aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    Another
                                    action
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    Something
                                    else here
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- Settings -->
                <div class="settings-icon d-flex">
                    <span class="btn btn-icon" role="button">
                        <i class='bx bx-search-alt-2'></i>
                    </span>
                    <span class="btn btn-icon" role="button">
                        <i class='bx bxs-cog'></i>
                    </span>
                    <span class="btn btn-icon" role="button">
                        <i class='bx bx-bell' style='color:#0a0909'></i>
                    </span>
                    <span class="btn btn-icon" role="button">
                        <img class="favicon" src="@_content/img/logoG.jpg" />
                    </span>
                </div>
            </div>

        </div>
    </nav>


    <!-- SİDEBAR -->
    <navbar class="sidebar">
        <header>
            <div class="image-text">
                <div class="text-box">
                    <div class="text-box-content"
                         style="display: flex; align-items: center;">
                        <i class='bx bx-user'></i>
                        GizSoft API
                    </div>
                </div>

                <div class="workspace-buttons">
                    <div class="workspace-buttons-content">
                        <div class="btn btn-icon" role="button">New</div>
                        <div class="btn btn-icon" role="button">Import</div>
                    </div>
                </div>
            </div>
        </header>

        <div class="menu-bar">
            <div class="menu">
                <!-- Loglar -->
                <div class="menu-link" ng-click="showContent('Loglar')" data-target="log">
                    <span>
                        <i class='bx bx-book-open'></i>
                        <div class="text nav-text">Loglar</div>
                    </span>
                </div>
                <!-- Apiler -->
                <div class="menu-link" ng-click="showContent('Apiler')" data-target="api">
                    <span>
                        <i class='bx bx-directions'></i>
                        <div class="text nav-text">Apiler</div>
                    </span>
                </div>
                <!-- Kullanıcılar -->
                <div class="menu-link" ng-click="showContent('Kullanicilar')" data-target="user">
                    <span>
                        <i class="las la-user-friends" style="font-size: 20px;"></i>
                        <div class="text nav-text">Kullanıcılar</div>
                    </span>
                </div>
                <!-- Bağlantılar -->
                <div class="menu-link" ng-click="showContent('Baglantilar')" data-target="link">
                    <span>
                        <i class='bx bx-link-alt'></i>
                        <div class="text nav-text">Bağlantılar</div>
                    </span>
                </div>
                <!-- Servisler -->
                <div class="menu-link" ng-click="showContent('Servisler')" data-target="servis">
                    <span>
                        <i class="las la-random" style="font-size: 20px;"></i>
                        <div class="text nav-text">Servisler</div>
                    </span>
                </div>
                <!-- End Points -->
                <div class="menu-link" ng-click="showContent('endPoints')" data-target="points">
                    <span>
                        <i class='bx bx-shape-square'></i>
                        <div class="text nav-text">End Points</div>
                    </span>
                </div>
                <!-- Çıkış Yap -->
                <div class="menu-link">
                    <span>
                        <i class='bx bx-exit'></i>
                        <div class="text nav-text">Çıkış Yap</div>
                    </span>
                </div>

                <div class="menu-link-toggle">
                    <span class="toggle-theme" ng-click="toggleTheme()">
                        <i class='bx' ng-class="{'bxs-toggle-left': theme === 'light', 'bxs-toggle-right': theme === 'dark'}"></i>
                    </span>
                </div>
            </div>
            <div class="menu-details">
                <div class="menu-details-wrapper">
                    <div class="menu-details-header">
                        <div class="header-requester">
                            <button class="create-new"><i class='bx bx-plus'></i></button>
                            <div class="input-search-group">
                                <div class="input-search-icon" role="button"><i class='bx bx-filter'></i></div>
                                <div class="input-searchbox">
                                    <input type="search" class="input-search">
                                </div>
                                <!-- <div class="input-search-cancel" role="button"><i class="icon-close"></i></div> -->
                            </div>
                            <div class="menu-other" role="button">
                                <i class="icon-options"></i>
                            </div>
                        </div>

                    </div>

                    <div class="menu-contents">
                        <div>
                            <div ng-repeat="item in logsItems" ng-click="OpenTab('Home/Contract', 'Contract', 0)" class="contents-item">
                                <div class="item-toggle-btn"><i class="icon-arrow-right"></i></div>
                                <div class="item-head-name-wrapper">
                                    <div class="item-head-name">{{item.name}}</div>
                                    <div class="item-head-fav"><i class="icon-star"></i></div>
                                    <div class="item-head-fav"><i class="icon-options"></i></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </navbar>


    <div class="pane-container">
        <div class="pane">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-route/1.8.2/angular-route.min.js" integrity="sha512-5zOAub3cIpqklnKmM05spv4xttemFDlbBrmRexWiP0aWV8dlayEGciapAjBQWA7lgQsxPY6ay0oIUVtY/pivXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-sanitize/1.8.3/angular-sanitize.min.js" integrity="sha512-dqbRITjlgYAKHWHwL8fK7VPOsFc702ybywomtYLRcjOzBHM3WgEGN0SQQR6IJKY4ZiJiZkNguOAcFZmalk+2sA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-messages/1.8.3/angular-messages.min.js" integrity="sha512-a+xgEyXVK7r+KKIDYyHtFfLi9LItmFDff6Z4/5lrGmL03u1vtFCjQXQz3dSIwOapB3YIRMBO1+IQj6ptnxAh/A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-aria/1.8.3/angular-aria.min.js" integrity="sha512-674PQ5I4feceHJ9HZkcjzjRvmlpuWowIFM6RahwsCh1vrh1fxoMerr793aq2xobU9wJ9mDAgJ9d0WlP+WwZg6g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-animate/1.8.3/angular-animate.min.js" integrity="sha512-Vhup4/4s+jnmiFsp1Sg1/6jXncRbIBc+fKemYjq1n+nEXthmeASyaWnClWsAV5Sas7WbLMLNYYHw6TxwQE4oPQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.2.1/angular-material.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-sanitize/1.8.2/angular-sanitize.min.js" integrity="sha512-JkCv2gG5E746DSy2JQlYUJUcw9mT0vyre2KxE2ZuDjNfqG90Bi7GhcHUjLQ2VIAF1QVsY5JMwA1+bjjU5Omabw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/js/app.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
